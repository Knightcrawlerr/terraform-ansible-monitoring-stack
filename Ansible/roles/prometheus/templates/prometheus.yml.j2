global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: ["localhost:9093"]   

rule_files:
  - "/etc/prometheus/rules/*.yml"


scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "node_exporter"
    static_configs:
      - targets:
{% for host in groups['app_servers'] + groups['monitoring_servers'] %}
          - "{{ hostvars[host].private_ip }}:9100"
{% endfor %}

  - job_name: "mysql_exporter"
    static_configs:
      - targets:
{% for host in groups['app_servers'] %}
          - "{{ hostvars[host].private_ip }}:9104"
{% endfor %}
